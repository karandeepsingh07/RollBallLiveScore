<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:background="@drawable/light_gradient">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/light_other_background"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/light_other_background">
            <TextView
                android:id="@+id/textVIewCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="start"
                android:text="Category"
                android:background="@color/design_default_color_primary"
                android:textColor="@color/cardview_light_background"
                android:textSize="15sp"
                android:padding="1dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tournament Name"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />
            <TextView
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:gravity="start"
                android:text="Live"
                android:background="@android:color/holo_red_dark"
                android:textColor="@color/cardview_light_background"
                android:textSize="15dp"
                android:padding="1dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.constraint.ConstraintLayout>
    <!--    <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/livePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@android:color/background_light"
            android:elevation="50dp"
            android:layout_margin="@dimen/cardview_default_elevation"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/light_other_background"
                android:orientation="vertical">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:transitionName="matchCard"
                    android:background="@drawable/black_gradient">
                    <!--android:background="@drawable/bgr"-->

                    <com.jgabrielfreitas.core.BlurImageView
                        android:id="@+id/imageView3"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bgrnew"
                        android:tint="#5F000000"
                        android:transitionName="bgimage" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="150dp"
                        android:layout_marginTop="8dp"
                        android:ellipsize="start"
                        android:gravity="left|start"
                        android:maxLines="2"
                        android:text="Team1"
                        android:transitionName="team1"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="9sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.192"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.701" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:gravity="end"
                        android:maxWidth="150dp"
                        android:maxLength="15"
                        android:maxLines="2"
                        android:scrollHorizontally="true"
                        android:text="Team2"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="9sp"
                        android:transitionName="team2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.83"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.701" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:transitionName="scoret1"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.242"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.45" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:transitionName="scoret2"
                        android:text="0"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.742"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.45" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:transitionName="dash"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="50sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.45" />


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VS"
                        android:textColor="@color/cardview_light_background"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.712" />

                    <TextView
                        android:id="@+id/winteam"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@color/emphasis"
                        android:text="winning team name"
                        android:textColor="@color/cardview_light_background"
                        android:textSize="20sp"
                        android:paddingLeft="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                </android.support.constraint.ConstraintLayout>



            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@drawable/light_other_background"
                android:layout_height="wrap_content">
                <!--<ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:src="@color/common_google_signin_btn_text_light_disabled"/>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_margin="8dp"
                        android:elevation="40dp"
                        app:cardCornerRadius="5dp"
                        android:background="@drawable/light_gradient">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/dummy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1st Half"
                                android:textAlignment="center"
                                style="@style/sectionHeader"
                                android:textSize="16sp"
                                android:layout_centerHorizontal="true"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/dummy"
                                android:layout_marginTop="5dp"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/halfsc1"
                                    android:textSize="30sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0" />
                                <TextView
                                    android:id="@+id/dash"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="30sp"
                                    android:text="-" />
                                <TextView
                                    android:id="@+id/halfsc2"
                                    android:textSize="30sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0" />
                            </LinearLayout>
                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="8dp"
                        android:elevation="40dp"
                        app:cardCornerRadius="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/light_gradient">
                        <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/dummy2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/sectionHeader"
                            android:text="2nd Half"
                            android:textAlignment="center"
                            android:textSize="16sp"
                            android:layout_centerHorizontal="true"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/dummy2"
                            android:layout_marginTop="5dp"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/half2sc1"
                                android:textSize="30sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                            <TextView
                                android:id="@+id/dash2"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="30sp"
                                android:text="-" />
                            <TextView
                                android:id="@+id/half2sc2"
                                android:textSize="30sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0" />
                        </LinearLayout>

                    </RelativeLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
                <!--<TextView
                    android:id="@+id/half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp"
                    android:textAlignment="textStart"
                    android:textSize="22sp"
                    android:hint="1st Half  :"/>-->
                <!--<ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:src="@color/common_google_signin_btn_text_light_disabled"
                    />-->

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginBottom="10dp"
                    android:layout_margin="8dp"
                    android:elevation="90dp"
                    app:cardCornerRadius="5dp"
                    android:background="@drawable/light_gradient"
                    android:layout_gravity="center_horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        style="@style/sectionHeader"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="Fouls"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="60sp"
                        android:layout_below="@id/textView6"
                        android:layout_toStartOf="@id/ectratimealign"
                        android:layout_marginEnd="20dp"/>
                    <TextView
                        android:id="@+id/ectratimealign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="60sp"
                        android:text="-"
                        android:layout_below="@id/textView6"
                        tools:layout_editor_absoluteY="48dp" />
                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_below="@id/textView6"
                        android:layout_toEndOf="@id/ectratimealign"
                        android:textSize="60sp"
                        android:layout_marginStart="20dp" />

                </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_margin="8dp"
                    android:elevation="40dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="5dp"
                    android:background="@drawable/light_gradient"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="7dp">

                    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        style="@style/sectionHeader"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:text="Extra Time Score"
                        android:textAlignment="center"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/esc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="60sp"
                        android:layout_below="@id/textView17"
                        android:layout_toStartOf="@id/extratimealign"
                        android:layout_marginEnd="20dp"/>
                    <TextView
                        android:id="@+id/extratimealign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textSize="60sp"
                        android:text="-"
                        android:layout_below="@id/textView17"
                        tools:layout_editor_absoluteY="48dp" />
                    <TextView
                        android:id="@+id/esc2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_below="@id/textView17"
                        android:layout_toEndOf="@id/extratimealign"
                        android:textSize="60sp"
                        android:layout_marginStart="20dp" />

                </RelativeLayout>
                </android.support.v7.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/backgnd">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:text="Live Chat coming soon..." />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>