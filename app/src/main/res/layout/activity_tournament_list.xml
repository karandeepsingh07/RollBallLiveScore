<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="200dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/backgnd"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_google_signin_btn_text_light_default">
                <!--android:background="@drawable/bgr"-->

                <com.jgabrielfreitas.core.BlurImageView
                    android:id="@+id/imagebGR"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:tint="#9F000000"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/textViewDTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textView5"
                    android:layout_below="@id/textViewTName"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/cardview_light_background"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:text="00/00/00"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/textViewDFrom"
                    android:layout_below="@id/textViewTName"
                    android:textColor="@color/cardview_light_background"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:text="|"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewDFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tournamentImage"
                    android:layout_below="@+id/textViewTName"
                    android:textColor="@color/cardview_light_background"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="35dp"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:maxLength="8"
                    android:text="00/00/00"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewTName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tournamentImage"
                    android:textColor="@color/cardview_light_background"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="21dp"
                    android:text="Tournament Name"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textViewTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tournamentImage"
                    android:textColor="@color/cardview_light_background"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="16dp"
                    android:text="Teams Participating" />

                <TextView
                    android:id="@+id/textViewTNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/textViewTeam"
                    android:layout_below="@id/tournamentImage"
                    android:textColor="@color/cardview_light_background"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:text="-" />

                <ImageView
                    android:id="@+id/tournamentImage"
                    android:layout_width="wrap_content"
                    android:textColor="@color/cardview_light_background"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/tournamentimg" />
                <TextView
                    android:id="@+id/venueText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Venue"
                    android:textColor="@color/cardview_light_background"
                    android:layout_below="@id/textViewTeam"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="7dp"/>
                <TextView
                    android:id="@+id/venue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/cardview_light_background"
                    android:layout_toEndOf="@id/venueText"
                    android:layout_below="@id/textViewTeam"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="116dp"/>

            </RelativeLayout>
            <!--<com.jgabrielfreitas.core.BlurImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/banner"
                android:tint="#6F000000"/>-->
            <!--<ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner"
                android:scaleType="fitXY"/>-->
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>